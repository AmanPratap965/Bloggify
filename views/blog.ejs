<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blog</title>
    <%- include('./partials/head')%>
  </head>
  <body>
    <%- include('./partials/nav') %>

    <div class="container-fluid mt-4">
      <div class="row">
        <div class="col-md-10 offset-md-1">
          <% if (blog) { %>
          <div class="blog-content">
            <% if (blog.coverImageURL) { %>
            <div class="blog-header">
              <img
                src="<%= blog.coverImageURL %>"
                class="w-100"
                style="max-height: 400px; object-fit: cover"
                alt="Blog cover image"
              />
            </div>
            <% } %>
            <div class="blog-body">
              <h1 class="display-4 mb-3"><%= blog.title %></h1>
              <p class="text-muted">
                <small
                  >Posted on <%= blog.createdAt.toLocaleDateString() %></small
                >
              </p>
              <div
                class="blog-content-text"
                style="
                  max-height: 600px;
                  overflow-y: auto;
                  padding: 20px 0;
                  font-family: 'Open Sans', sans-serif;
                  font-size: 1.1rem;
                  line-height: 1.8;
                  color: #2c3e50;
                  letter-spacing: 0.3px;
                "
              >
                <%= blog.body %>
              </div>
            </div>
          </div>
          <% } else { %>
          <div class="alert alert-info">Blog not found</div>
          <% } %>
        </div>
      </div>
    </div>
    <div class="container mt-4">
      <img
        src="<%=blog.createdBy.profileImageURL  %>"
        width="50px"
        alt="blogImage"
      />
      <h4><%=blog.createdBy.fullName %></h4>
    </div>

    <div class="container mt-4">
      <h1>Comments <%= comments.length %></h1>
      <% if (locals.user) { %>
      <form action="/blog/comment/<%= blog._id  %>" method="post">
        <div class="mb-3">
          <input
            type="text"
            name="content"
            class="form-control"
            placeholder="Entery your Comment"
          />
          <button class="btn btn-primary btn-sm mt-2" type="submit">Add</button>
        </div>
      </form>
      <% } %>
    </div>
    <!-- Printing all the comments -->
    <div class="container mt-4">
      <% comments.forEach((comment) => { %>
      <div class="container mb-1 card">
        <div class="card-body">
          <div class="d-flex align-items-start">
            <img
              src="<%= comment.createdBy.profileImageURL %>"
              width="50px"
              class="rounded-circle me-3"
              alt="Profile Image"
            />
            <div>
              <h6 class="mb-1"><%= comment.createdBy.fullName %></h6>
              <p class="card-text"><%= comment.content %></p>
            </div>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
    <%- include('./partials/script') %>
  </body>
</html>
